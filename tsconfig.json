{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./build"
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "nodenext"
    },
    "experimentalSpecifierResolution": "node"
  },
  "include": ["eslint.config.js", "./src/**/*.ts", "./test/**/*.ts"]
}
